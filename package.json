{
  "name": "workbench",
  "version": "1.0.0",
  "description": "Browser-based tools for finding and classifying hieroglyphs in images",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/hieroglyphics-initiative/workbench.git"
  },
  "private": true,
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration production --crossOrigin=use-credentials",
    "build-serve": "yarn build && superstatic ./dist --port 8080",
    "bundle-report": "webpack-bundle-analyzer ./dist/stats.json",
    "test": "ng test",
    "test-ci": "ng test --watch=false --browsers=ChromeHeadlessNoSandbox",
    "lint": "npm run lint-scss && npm run lint-ts",
    "lint-scss": "stylelint './src/**/*.scss'",
    "lint-ts": "ng lint",
    "e2e": "ng e2e",
    "extract": "ngx-translate-extract --input ./src/app --output ./src/assets/i18n/{en,ar}.json --clean --sort --format namespaced-json"
  },
  "dependencies": {
    "@angular/animations": "^14.1.0",
    "@angular/common": "^14.1.0",
    "@angular/compiler": "^14.1.0",
    "@angular/core": "^14.1.0",
    "@angular/forms": "^14.1.0",
    "@angular/platform-browser": "^14.1.0",
    "@angular/platform-browser-dynamic": "^14.1.0",
    "@angular/router": "^14.1.0",
    "@angular/service-worker": "14.1.0",
    "@biesbjerg/ngx-translate-extract": "^7.0.4",
    "@ngx-pwa/local-storage": "^13.0.5",
    "@ngx-translate/core": "^14.0.0",
    "@ngx-translate/http-loader": "^7.0.0",
    "array-move": "^4.0.0",
    "blueimp-load-image": "^5.16.0",
    "buffer": "^6.0.3",
    "clone-deep": "^4.0.1",
    "core-js": "^3.24.0",
    "fabric": "^5.2.1",
    "hammerjs": "^2.0.8",
    "js-yaml": "^4.1.0",
    "jsfeat": "^0.0.8",
    "lodash": "^4.17.19",
    "mousetrap": "^1.6.3",
    "ngx-smart-modal": "^7.4.1",
    "rxjs": "^7.5.6",
    "sortablejs": "^1.9.0",
    "superstatic": "^8.0.0",
    "tooltip.js": "^1.3.2",
    "tslib": "^2.0.0",
    "uuid": "^8.3.2",
    "webfontloader": "^1.6.28",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.1.0",
    "@angular/cli": "^14.1.0",
    "@angular/compiler-cli": "^14.1.0",
    "@angular/language-service": "^14.1.0",
    "@types/fabric": "^4.5.11",
    "@types/hammerjs": "^2.0.36",
    "@types/jasmine": "~4.0.3",
    "@types/jasminewd2": "^2.0.6",
    "@types/mousetrap": "^1.6.2",
    "@types/node": "^16.11.7",
    "codelyzer": "^6.0.2",
    "jasmine-core": "~4.3.0",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.1",
    "karma-coverage-istanbul-reporter": "~3.0.3",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.0.0",
    "protractor": "~7.0.0",
    "stylelint": "^14.9.1",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-scss": "^4.3.0",
    "ts-node": "^10.9.1",
    "tslint": "~6.1.3",
    "typescript": "~4.7.4",
    "webpack-bundle-analyzer": "^4.5.0"
  }
}
